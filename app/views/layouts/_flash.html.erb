<% flash.each do |key, msg| %>
  <% unless key == :timedout %>
    <%= content_tag :div, class: "pm-80 alert alert-dismissable alert-#{key}" do %>
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
        &times;
      </button>
      <%= msg %>
    <% end %>
  <% end %>
<% end %>